{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 16",

    "ts-node": {
        "files": true
    },

    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",
        "strict": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*"]
}
